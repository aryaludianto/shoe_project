{
  "name": "shoe-project",
  "version": "1.0.0",
  "description": "Full stack project for a shoe company",
  "repository": "https://github.com/aryaludianto/shoe_project.git",
  "author": "arya ludianto<arya.pratamal@ymail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-assets",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec yarn run dev:start",
    "client": "cd client && yarn run start",
    "shoe": "concurrently --kill-others-on-fail \"yarn run dev\" \"yarn run client\"",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && cd client && yarn install && yarn run build client"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^15.0.1",
    "@types/shelljs": "^0.8.8",
    "@types/styled-components": "^5.1.9",
    "concurrently": "^6.0.2",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "http-proxy-middleware": "^1.3.1",
    "mongoose": "^5.12.7",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "winston": "^3.3.3",
    "yarn-run-all": "^3.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "typescript": "^4.2.4"
  }
}
